<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:textColor="@color/white"><shape android:shape="rectangle">

            <!-- Change state pressed button color here -->
            <corners android:radius="5dp" />

            <gradient android:angle="90" android:endColor="#000000" android:startColor="#000000" />

            <padding android:bottom="6.0dip" android:left="6.0dip" android:right="6.0dip" android:top="6.0dip" />

            <stroke android:width="1.0dip" android:color="@color/white" />
        </shape></item>
    <item android:state_pressed="false" android:textColor="@color/white"><shape android:shape="rectangle">

            <!-- Change default button color here -->
            <corners android:radius="5dp" />

            <gradient android:angle="90" android:endColor="#ef5721" android:startColor="#ef5721" />

            <padding android:bottom="6.0dip" android:left="6.0dip" android:right="6.0dip" android:top="6.0dip" />

            
        </shape></item>

</selector>