<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"
        android:textColor="@color/btnDisableText">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
             <!-- Change state pressed button color here -->
            <gradient android:startColor="@color/btnDisable" android:endColor="@color/btnDisable" android:angle="90"/>
            <padding android:left="6.0dip" android:top="6.0dip"
                android:right="6.0dip" android:bottom="6.0dip"/>
            
        </shape>
    </item>
    <item android:state_pressed="false"
        android:textColor="@color/btnDisableText">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <!-- Change default button color here -->
            <gradient android:startColor="@color/btnDisable" android:endColor="@color/btnDisable" android:angle="90"/>
            <padding android:left="6.0dip" android:top="6.0dip"
                android:right="6.0dip" android:bottom="6.0dip"/>
            
        </shape>
    </item>
</selector>